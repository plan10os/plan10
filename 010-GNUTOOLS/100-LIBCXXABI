cd libcxxabi

cmake -B build -G Ninja \
      -DCMAKE_INSTALL_PREFIX="/cgnutools" \
      -DCMAKE_C_COMPILER="${PLAN10_TARGET}-gcc" \
      -DCMAKE_CXX_COMPILER="${PLAN10_TARGET}-g++" \
      -DCMAKE_SHARED_LINKER_FLAGS="-L/cgnutools/lib" \
      -DLIBCXXABI_ENABLE_STATIC=ON \
      -DLIBCXXABI_USE_LLVM_UNWINDER=ON \
      -DLLVM_PATH="${LLVMSRC}/llvm" \
      -DLIBCXXABI_LIBUNWIND_PATH="${LLVMSRC}libunwind" \
      -DLIBCXXABI_LIBCXX_INCLUDES="${LLVMSRC}/libcxx/include" && \

ninja -C build
ninja -C build install
rm -rf build

# Link libcxxabi to final toolchain. Libraries will be replaced once
# libcxxabi is rebuilt with clang
ln -vs /cgnutools/lib/libc++abi* /llvmtools/lib/